#!/bin/bash 

sudo apt autoremove -y 
sudo apt update; sudo apt upgrade -y 
sudo apt install tmux gpg gcc make gettext unzip cmake build-essential python3-neovim jq wget curl apt-file python3-dev python3-pip tzdata dconf-cli uuid-runtime inetutils-ping rclone pkg-config libtool locate git tmux gh libu2f-udev xsel docker.io locate python3.10-venv calendar ccal glow htop gcalcli fuse libnss3a libatk-bridge* libgtk-3-common libasound2 lxappearance net-tools nvidia-utils-535 nvidia-cuda-toolkit whois ripgrep ./fd_9.0.0_amd64.deb nmap dnsutils xmlstarlet ./session-manager-plugin.deb gawk fzf -y

mkdir $HOME/.local/bin
wget https://starship.rs/install.sh 
chmod 755 install.sh
./install.sh -b $HOME/.local/bin

echo "don't forget to manually installed these debs; fd_9.0.0_amd64.deb (find) and session-manager-plugin.deb (ssm for aws)"
type -p curl >/dev/null || (sudo apt update && sudo apt install curl -y)
curl -fsSL https://cli.github.com/packages/githubcli-archive-keyring.gpg | sudo dd of=/usr/share/keyrings/githubcli-archive-keyring.gpg \
&& sudo chmod go+r /usr/share/keyrings/githubcli-archive-keyring.gpg \
&& echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main" | sudo tee /etc/apt/sources.list.d/github-cli.list > /dev/null \
&& sudo apt update \
&& sudo apt install gh -y

mkdir $HOME/projects
mkdir -p $HOME/.local/bin

cd $HOME

git config --global user.name "regular bill"
git config --global user.email "regularbill@bill.com"
gh auth login

wget -qO- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.1/install.sh | bash
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
nvm install --lts
nvim use --lts

npm install -g @bitwarden/cli
bw login


cd $HOME/projects
sh -c "$(curl -fsLS get.chezmoi.io)"
sudo cp $HOME/projects/bin/chezmoi /usr/bin/
alias dot=/usr/bin/chezmoi
export PATH=$PATH:$HOME/.local/bin
/usr/bin/chezmoi init https://github.com/winslowb/dotfiles.git
/usr/bin/chezmoi update -v
source $HOME/.bashrc

echo 'cd $HOME' >> $HOME/.bash_profile
source $HOME/.bashrc

cd $HOME/projects
git clone https://github.com/neovim/neovim.git
cd $HOME/projects/neovim
git checkoout origin/release-0.8
make CMAKE_BUILD_TYPE=Release
sudo make install
cp $HOME/projects/neovim/build/bin/nvim $HOME/.local/bin

cd $HOME/projects
wget https://github.com/ankitpokhrel/jira-cli/releases/download/v1.3.0/jira_1.3.0_linux_arm64.tar.gz
tar -xzvf jira_1.3.0_linux_arm64.tar.gz  

export TERMINAL=tilix
bash -c "$(wget -qO- https://git.io/vQgMr)"

