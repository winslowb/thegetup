#!/bin/bash 

sudo apt update; sudo apt upgrade -y 
sudo apt install -y  gh gpg make gettext unzip cmake build-essential python3-neovim jq wget curl apt-file python3-dev python3-pip


git config --global user.name "regular bill"
git config --global user.email "regularbill@bill.com"
gh auth login

echo 'cd $HOME' >> $HOME/.bash_profile
source $HOME/.bashrc

mkdir $HOME/projects
mkdir -p $HOME/.local/bin

cd $HOME/projects
git clone https://github.com/neovim/neovim.git
cd $HOME/projects/neovim
make CMAKE_BUILD_TYPE=Release
sudo make install

wget -qO- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.1/install.sh | bash
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
nvm install 18.14.2

npm install -g @bitwarden/cli
bw login

NPM_CONFIG_PREFIX=~/.joplin-bin npm install -g joplin
ln -s ~/.joplin-bin/bin/joplin $HOME/.local/bin

wget https://github.com/ankitpokhrel/jira-cli/releases/download/v1.3.0/jira_1.3.0_linux_arm64.tar.gz
tar -xzvf jira_1.3.0_linux_arm64.tar.gz  

sh -c "$(curl -fsLS get.chezmoi.io)"
cp $HOME/projects/bin/chezmoi $HOME/.local/bin/dot
dot init https://github.com/$GITHUB_USERNAME/dotfiles.git
dot update -v

export TERMINAL=tilix
bash -c "$(wget -qO- https://git.io/vQgMr)"

